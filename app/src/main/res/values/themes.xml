<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ownbarbershop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/barberPrimary</item>
        <item name="colorPrimaryVariant">@color/barberPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyleGroupButtonAbout" parent="Widget.MaterialComponents.Button.OutlinedButton">
       <item name="android:backgroundTint">@drawable/group_btn_about_background</item>
       <item name="android:textColor">@drawable/group_btn_about_textcolor</item>
       <item name="android:textAllCaps">false</item>
       <item name="strokeColor">@color/white</item>
    </style>

    <style name="MyStyleGroupButtonRecords" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <style name="MyBaseStyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/barberPrimaryVariant1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/textcolor_yclients</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <style name="CircularBackground">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerFamilyTopRight">rounded</item>

        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

</resources>


