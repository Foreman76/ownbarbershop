<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ownbarbershop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/barberPrimary</item>
        <item name="colorPrimaryVariant">@color/barberPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyleGroupButtonAbout" parent="Widget.MaterialComponents.Button.OutlinedButton">
       <item name="android:backgroundTint">@drawable/group_btn_about_background</item>
       <item name="android:textColor">@drawable/group_btn_about_textcolor</item>
       <item name="android:textAllCaps">false</item>
       <item name="strokeColor">@color/white</item>
    </style>

    <style name="MyStyleGroupButtonRecords" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <style name="MyBaseStyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/barberPrimaryVariant1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>


