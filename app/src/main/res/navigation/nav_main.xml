<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/orderFragment">

    <fragment
        android:id="@+id/orderFragment"
        android:name="ru.int24.ownbarbershop.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_listServiceFragment"
            app:destination="@id/listServiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.int24.ownbarbershop.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ru.int24.ownbarbershop.fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/recordsFragment"
        android:name="ru.int24.ownbarbershop.fragments.RecordsFragment"
        android:label="fragment_records"
        tools:layout="@layout/fragment_records" />
    <fragment
        android:id="@+id/goodsFragment"
        android:name="ru.int24.ownbarbershop.fragments.GoodsFragment"
        android:label="fragment_goods"
        tools:layout="@layout/fragment_goods" />
    <fragment
        android:id="@+id/errorFragment"
        android:name="ru.int24.ownbarbershop.ErrorFragment"
        android:label="fragment_error"
        tools:layout="@layout/fragment_error">
        <action
            android:id="@+id/action_errorFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/listServiceFragment"
        android:name="ru.int24.ownbarbershop.fragments.ListServiceFragment"
        android:label="fragment_list_service"
        tools:layout="@layout/fragment_list_service" >
        <action
            android:id="@+id/action_listServiceFragment_to_errorFragment"
            app:destination="@id/errorFragment" />
        <action
            android:id="@+id/action_listServiceFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
</navigation>